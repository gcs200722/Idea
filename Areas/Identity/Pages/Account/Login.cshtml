@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Log in</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" />

                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Greenwich Ideas Management System</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            
                        Welcome to the Greenwich Ideas Management System! Share your innovative ideas, collaborate with others, and contribute to making our insitutation better.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    /* Background */
.row {
    display: flex;
    justify-content: center;
    padding: 30px;
    margin-top: 50px;
    background: linear-gradient(135deg, #8e44ad, #3498db, #e74c3c);
    height: 100vh;
    align-items: center;
    background-size: 400% 400%;
    animation: gradientAnimation 10s ease infinite;
}

/* Keyframes for background animation */

/* Column Styling */
.col-md-4 {
    max-width: 420px;
    width: 100%;
    padding: 40px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 25px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2), inset 0px 10px 15px rgba(255, 255, 255, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
}

/* Button Styling */
button#wlogin-submit {
    padding: 18px;
    font-size: 20px;
    border-radius: 25px;
    border: none;
    cursor: pointer;
    width: 100%;
    transition: all 0.4s ease-out;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    background: linear-gradient(135deg, #e74c3c, #3498db);
    color: white;
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
    margin-top: 20px;
}

button#login-submit:hover {
    background: linear-gradient(135deg, #3498db, #e74c3c);
    transform: translateY(-5px);
    box-shadow: 0px 12px 25px rgba(0, 0, 0, 0.25);
}

button#login-submit:active {
    transform: translateY(2px);
}

/* Form Floating Inputs */
.form-floating input {
    width: 100%;
    padding: 18px 25px;
    font-size: 16px;
    border-radius: 20px;
    border: 2px solid #e0e0e0;
    background: linear-gradient(135deg, #fafafa, #f0f0f0);
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1), inset 0px 2px 8px rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease-out;
}

.form-floating input:focus {
    border-color: #3498db;
    background: #ffffff;
    box-shadow: 0px 0px 20px rgba(52, 152, 219, 0.5);
    transform: scale(1.05);
}

/* Floating Label */
.form-floating label {
    position: absolute;
    top: 18px;
    left: 25px;
    font-size: 16px;
    color: #888;
    transition: all 0.3s ease;
}

.form-floating input:focus + label,
.form-floating input:not(:placeholder-shown) + label {
    color: #3498db;
    transform: translateY(-20px);
    font-size: 14px;
}

/* Section Styling */
section {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2), inset 0px 10px 15px rgba(255, 255, 255, 0.8);
    margin-top: 40px;
    width: 100%;
    text-align: center;
}

/* External Login Buttons */
button[type="submit"] {
    background: linear-gradient(135deg, #ff6347, #ff8c00);
    color: white;
    margin-right: 15px;
    border-radius: 20px;
    padding: 16px 35px;
    font-size: 16px;
    transition: all 0.3s ease;
}

button[type="submit"]:hover {
    background: linear-gradient(135deg, #ff8c00, #ff6347);
    transform: translateY(-5px);
}

button[type="submit"]:active {
    transform: translateY(2px);
}

</style>