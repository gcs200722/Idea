        max-width: 900px;
        margin: 0 auto;
    }

    .row {
        margin-bottom: 15px;
    }

    dt {
        font-weight: bold;
        color: #495057;
    }

    dd {
        margin-left: 10px;
        color: #6c757d;
        font-size: 1rem;
    }

    .btn-danger {
