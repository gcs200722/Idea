@model Idea.Models.Department

@{
    ViewData["Title"] = "Details";
}
<style>
    /* Cơ bản cho body */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Header */
    h1 {
        font-size: 2.5em;
        font-weight: bold;
        color: #6c5ce7;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 1.5em;
        font-weight: bold;
        color: #6c5ce7;
        margin-bottom: 10px;
    }

    /* Divider line */
    hr {
        border: 0;
        border-top: 2px solid #6c5ce7;
        margin-bottom: 30px;
    }

    /* Definition list */
    dl.row {
        display: flex;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    dt {
        font-size: 1.1em;
        color: #555;
        font-weight: bold;
        margin-bottom: 10px;
    }

    dd {
        font-size: 1.1em;
        color: #333;
        margin-bottom: 10px;
    }

    /* Form container */
    .col-sm-2, .col-sm-10 {
        display: inline-block;
        vertical-align: top;
    }

    .col-sm-2 {
        width: 30%;
        font-weight: bold;
    }

    .col-sm-10 {
        width: 70%;
    }

    /* Link styling */
    a {
        color: #3498db;
        text-decoration: none;
        font-size: 1.1em;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #00cec9;
        text-decoration: none;  /* Bỏ underline */
    }

    /* Container for action buttons */
    .text-center {
        text-align: center;
        margin-top: 30px;
    }

    /* Button-like styling for Edit and Back links */
    .text-center a {
        background-color: #00cec9;
        color: white;
        padding: 10px 20px;
        font-size: 1.2em;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .text-center a:hover {
        background-color: #6c5ce7;
        transform: translateY(-4px);
    }
</style>
<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
