@model Idea.Models.Department

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Cơ bản cho body */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Header */
    h1 {
        font-size: 2.5em;
        font-weight: bold;
        color: #6c5ce7;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 1.5em;
        font-weight: bold;
        color: #6c5ce7;
        margin-bottom: 10px;
    }

    /* Form container */
    .row {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    /* Form */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border-radius: 6px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #00cec9;
            box-shadow: 0 0 8px rgba(0, 204, 201, 0.3);
        }

    label {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 5px;
    }

    /* Validation message */
    .text-danger {
        font-size: 0.9em;
        color: #e74c3c;
    }

    /* Submit button */
    .btn-primary {
        background-color: #00cec9;
        color: white;
        padding: 12px 20px;
        font-size: 1.2em;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #6c5ce7;
            transform: translateY(-4px);
        }

    /* Back link */
    a {
        color: #3498db;
        text-decoration: none;
        font-size: 1.1em;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #00cec9;
        }

    /* Divider line */
    hr {
        border: 0;
        border-top: 2px solid #6c5ce7;
        margin-bottom: 30px;
    }

    /* Form container styling */
    .col-md-4 {
        max-width: 400px;
        width: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    /* Container for back link */
    .text-center {
        text-align: center;
        margin-top: 20px;
    }

    /* Các quy tắc CSS không ảnh hưởng đến Navbar */
    /* Đảm bảo navbar không bị ảnh hưởng */
    .navbar,
    .navbar-brand,
    .navbar-nav,
    .navbar-toggler,
    .navbar-collapse {
        background-color: initial; /* Không thay đổi màu nền của navbar */
        color: initial; /* Không thay đổi màu chữ của navbar */
        box-shadow: none; /* Loại bỏ hiệu ứng bóng đổ */
    }

        .navbar a {
            color: #ffffff; /* Màu chữ mặc định trong navbar */
            font-weight: bold;
        }

            .navbar a:hover {
                color: #00cec9; /* Màu chữ khi hover trong navbar */
            }

</style>
<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
