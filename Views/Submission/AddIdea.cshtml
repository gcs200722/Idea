@model Idea.Models.NIdea

@{
    ViewData["Title"] = "Add Idea";
}

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center bg-primary text-white py-4">
            <h2 class="mb-0">✨ Share Your Brilliant Idea ✨</h2>
        </div>
        <div class="card-body p-5 bg-light">
            <form asp-action="AddIdea" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                <!-- Hidden Inputs -->
                <input type="hidden" asp-for="SubmissionId" value="@ViewBag.SubmissionId" />
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <input type="hidden" asp-for="View" value="0" />
                <input type="hidden" asp-for="FilePath" value="" />

                <!-- Title -->
                <div class="form-group mb-4">
                    <label asp-for="Title" class="form-label fw-bold">Idea Title</label>
                    <input asp-for="Title" class="form-control shadow-sm" placeholder="Enter your idea title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Brief -->
                <div class="form-group mb-4">
                    <label asp-for="Brief" class="form-label fw-bold">Brief Description</label>
                    <input asp-for="Brief" class="form-control shadow-sm" placeholder="Provide a short description" />
                    <span asp-validation-for="Brief" class="text-danger"></span>
                </div>

                <!-- Content -->
                <div class="form-group mb-4">
                    <label asp-for="Content" class="form-label fw-bold">Detailed Content</label>
                    <textarea asp-for="Content" class="form-control shadow-sm" rows="5" placeholder="Explain your idea in detail"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- File Upload -->
                <div class="form-group mb-4">
                    <label class="form-label fw-bold">📎 Attach a File</label>
                    <input type="file" name="file" class="form-control shadow-sm" />
                </div>

                <!-- Terms and Conditions -->
                <div class="form-check mb-4">
                    <input type="checkbox" name="isAcceptTerms" value="True" class="form-check-input" id="termsCheck" />
                    <label for="termsCheck" class="form-check-label">
                        I agree to the <a href="#" class="text-primary">terms and conditions</a>
                    </label>
                </div>

                <!-- Category -->
                <div class="form-group mb-5">
                    <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                    <select asp-for="CategoryId" class="form-select shadow-sm" asp-items="ViewBag.CategoryId">
                        <option selected disabled>Select a category</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm rounded-pill fw-bold">
                        🚀 Submit Idea
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center bg-light py-3">
            <a asp-action="ViewIdeas" asp-route-submissionid="@ViewBag.SubmissionId" class="btn btn-outline-primary">
                🔙 Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* General Form Styling */
    .form-control,
    .form-select {
        border-radius: 10px;
        padding: 10px 15px;
    }

    /* Button Animation */
    .btn-primary {
        background: linear-gradient(90deg, #007bff, #6610f2);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #6610f2, #007bff);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    /* Card Header Glow Effect */
    .card-header {
        background: linear-gradient(90deg, #007bff, #6610f2);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .card-header h2 {
            font-family: 'Poppins', sans-serif;
            font-weight: bold;
        }

    /* Validation Styling */
    .text-danger {
        font-size: 0.9rem;
        font-weight: bold;
    }
</style>
